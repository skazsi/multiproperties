<?xml version="1.0"?>

<project name="MultiProperties Core" default="generate-sources" basedir=".">

	<target name="generate-sources">
		<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
			<classpath>
				<fileset dir="${basedir}/lib">
					<include name="jaxb/jaxb-api.jar"/>
					<include name="jaxb/jaxb-impl.jar"/>
					<include name="jaxb/jaxb-xjc.jar"/>
				</fileset>
			</classpath>
		</taskdef>

		<xjc destdir="${basedir}/src" package="hu.skzs.multiproperties.base.model.schema" extension="true">
			<!--produces dir="${basedir}/src/hu/skzs/test/model" includes="*impl/**" />
			<arg value="-no-header"/-->
			<schema dir="${basedir}/src/hu/skzs/multiproperties/base">
			 	<include name="**/*.xsd"/>
			</schema>
		</xjc>
	</target>
</project>