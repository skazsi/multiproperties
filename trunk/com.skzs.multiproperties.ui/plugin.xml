   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="hu.skzs.multiproperties.ui.perspectives.Perspective"
            icon="icons/title.gif"
            id="hu.skzs.multiproperties.ui.perspective"
            name="MultiProperties"/>
